}

.footer-btn-warpper {
  width: 80%;
  height: 16vh;
  background-image: linear-gradient(rgba(255, 255, 255, 0) 0%, white 50%);
  z-index: 2;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
}

.footer-btn {
  width: 180rpx;
  margin-top: 4vh;
}


