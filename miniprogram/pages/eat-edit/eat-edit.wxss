.main-form-item {
  width: 90%;
  padding: 0 20rpx;
  min-height: 10vh;
  display: flex;
  align-items: center;

}

.dish-form-item-wrapper {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.dish-form-item {
  width: 94%;
  min-height: 10vh;
  display: flex;
  align-items: center;
}

.eat-edit-container {
  height: 100vh;
  overflow: hidden;
}

.form {
  height: 100vh;
  overflow: auto;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.main-wrapper {
  border: 1rpx solid rgb(109, 131, 255);
  border-radius: 24rpx;
  width: 90%
}

.title {
  font-size: medium;
}

.like_title {
  width: 200rpx;
  margin-left: 32rpx;
}

.like-box {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  width: 50%;
}

.evaluation {
  width: 60%;
}


.flex {
  display: flex;
  justify-content: center;
  align-items: center;
}

.border {
  position: relative;
}

.main-form-item-content {
  display: flex;
  flex: 1;
  padding: var(--td-input-vertical-padding, 32rpx);
  justify-content: space-between;
  align-items: center;
}

.border::after {
  content: '';
  display: block;
  position: absolute;
  top: unset;
  bottom: 0;
  left: unset;
  right: unset;
  background-color: var(--td-input-border-color, var(--td-component-stroke, var(--td-gray-color-3, #e7e7e7)));
  height: 1px;
  left: 0;
  right: 0;
  transform: scaleY(0.5);
  left: 32rpx;
  right: 0;
}

.dish-wrapper {
  width: 90%;
  padding: 4rpx 12rpx 24rpx 12rpx;
  margin-top: 20rpx;
  border: 1rpx solid rgb(109, 131, 255);
  border-radius: 24rpx;
  box-sizing: border-box;
}

.empty-wrapper {
  height: 16vh;
  width: 100%;
  margin-top: 16vh;
}

.dish-form-item-content {
  display: flex;
  flex: 1;
  padding: var(--td-input-vertical-padding, 32rpx);
  justify-content: space-between;
  align-items: center;
}

.dish-item {
  display: block;
  width: 100%;
}

.cell {
  height: 100%;
}

.dish-item-title {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.heart {
  color: red;
  margin-right: 10rpx;
}

.note {
  display: flex;
  align-items: center;
  height: 100%;
  justify-content: space-around;
  width: 100%;
}

.star {
  color: #f8d152;
}

.delete-btn {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 60rpx;
  height: 100%;
  color: red;
  margin-right: 30rpx;
}

.dish-rate {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.footer-btn-warpper {
  width: 94%;
  height: 16vh;
  background-image: linear-gradient(rgba(255, 255, 255, 0) 0%, white 50%);
  z-index: 2;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: relative;
  top: -16vh;
  /* grid-template-columns: repeat(3, 1fr); */
}

.footer-btn {
  width: 180rpx;
}

.check-footer-btn {
  width: 80%;
}

.dish-item .t-cell {
  margin-top: 16rpx;
  border: 2rpx solid rgb(109, 131, 255);
  border-radius: 10rpx;
}

.t-input--border:after {
  left: 32rpx !important;
  right: 0;
}

.t-textarea {
  padding: 0 !important;
}