.dish-wrapper {
  width: 90%;
  padding: 4rpx 12rpx 24rpx 12rpx;
  margin-top: 20rpx;
  border: 1rpx solid rgb(109, 131, 255);
  border-radius: 24rpx;
}

.dish-item {
  display: block;
  width: 100%;
}

.cell {
  height: 100%;
}

.dish-item-title {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.heart {
  color: red;
  margin-right: 10rpx;
}

.note {
  display: flex;
  align-items: center;
  height: 100%;
  justify-content: space-around;
